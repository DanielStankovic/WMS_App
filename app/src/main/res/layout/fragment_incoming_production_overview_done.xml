<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.incoming.production.IncomingProductionOverviewDoneFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/incomingOverviewDoneRv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_incoming_overview_left"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <TextView
        android:id="@+id/incomingOverviewDoneNoProdTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/no_added_prods_on_fb"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginHorizontal="16dp"
        android:visibility="gone" />

</FrameLayout>